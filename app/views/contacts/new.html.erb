<div class="row">
    <div class= "col-md-4 col-md-offset-4">
        <div class= "well">             <!-- form goes into grey box -->
            <!-- rails way of creating form on web page ... the content within "< %= %>"-->
            <%= form_for @contact do |f| %>
                <div class="form-group">
                  <%= f.label :name %>     <!-- to create label -->
                  <%= f.text_field :name, class: 'form-control' %>  <!-- to save the input or take input -->
                </div>
                <div class="form-group">
                  <%= f.label :email %>
                  <%= f.email_field :email, class: 'form-control' %>
                </div>
                <div class="form-group">
                  <%= f.label :comments %>
                  <%= f.text_area :comments, class: 'form-control' %>
                </div>
                
            <% end %>
        </div>
    </div>
</div>